<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:padding="20dp">
        <Button
            android:id="@+id/createListButton"
            android:text="Create List"
            android:textSize="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:layout_gravity="fill"
            android:drawableTop="@mipmap/ic_create_list_white_24dp"
            android:drawablePadding="10dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_row="0"
            android:layout_column="0" />
        <Button
            android:id="@+id/goShoppingButton"
            android:text="Go Shopping"
            android:textSize="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:layout_gravity="fill"
            android:drawableTop="@mipmap/ic_shopping_cart_white_24dp"
            android:drawablePadding="10dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_row="0"
            android:layout_column="1" />
        <Button
            android:id="@+id/manageListsButton"
            android:text="Manage Lists"
            android:textSize="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:layout_gravity="fill"
            android:drawableTop="@mipmap/ic_manage_lists_white_24dp"
            android:drawablePadding="10dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_row="1"
            android:layout_column="0" />
        <Button
            android:id="@+id/settingsButton"
            android:text="Settings"
            android:textSize="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:layout_gravity="fill"
            android:drawableTop="@mipmap/ic_settings_white_24dp"
            android:drawablePadding="10dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_row="1"
            android:layout_column="1" />
        <Button
            android:id="@+id/cloudButton"
            android:text="Cloud"
            android:textSize="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:layout_gravity="fill"
            android:drawableTop="@mipmap/ic_cloud_upload_white_24dp"
            android:drawablePadding="10dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_row="2"
            android:layout_column="0" />
    </GridLayout>
</ScrollView>